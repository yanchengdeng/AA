<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="apartment.wisdom.com.activities.CommonInfoActivity">

    <include layout="@layout/cp_common_title_bar" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_common_bar" />

    <TextView
        android:id="@+id/tv_add_people"
        style="@style/BtnNomalStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/recycle"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:gravity="center"
        android:padding="@dimen/image_padding_big"
        android:text="@string/add_person"
        android:textColor="@color/white"
        android:textSize="@dimen/text_normal" />

</RelativeLayout>
