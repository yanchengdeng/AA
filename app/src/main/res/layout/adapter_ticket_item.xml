<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="25.0dip"
    android:layout_marginLeft="20.0dip"
    android:layout_marginRight="20.0dip"
    android:background="@mipmap/coupon_bg">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="76.0dip"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="17.0dip"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15.0dip"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_prititle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="俊逸酒店"
                android:textColor="@color/black_tv"
                android:textSize="@dimen/text_normal_up" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5.0dip"
                android:background="@drawable/num_background"
                android:orientation="horizontal"
                android:paddingLeft="5.0dip"
                android:paddingRight="5.0dip">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="代金券x"
                    android:textColor="#ff798394"
                    android:textSize="@dimen/text_small" />

                <TextView
                    android:id="@+id/tv_prinum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textColor="#ff798394"
                    android:textSize="@dimen/text_normal_down" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10.0dip"
                android:text="有效期至"
                android:textColor="#ff798394"
                android:textSize="@dimen/text_design_24px" />

            <TextView
                android:id="@+id/tv_pridata"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10.0dip"
                android:text="2015.05.01"
                android:textColor="#ff798394"
                android:textSize="@dimen/text_design_24px" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="20.0dip">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¥"
            android:textColor="@color/orange"
            android:textSize="@dimen/text_normal" />

        <TextView
            android:id="@+id/tv_priprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100"
            android:textColor="@color/orange"
            android:textSize="@dimen/text_larger" />
    </LinearLayout>
</RelativeLayout>