<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <include layout="@layout/cp_common_title_bar" />

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:layout_width="84.0dip"
                android:layout_height="84.0dip"
                android:layout_marginTop="40.0dip"
                android:src="@drawable/ic_launcher" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="47.0dip"
                android:layout_marginLeft="10.0dip"
                android:layout_marginTop="35.0dip">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="账号"
                    android:textColor="#ff221815"
                    android:textSize="@dimen/text_design_30px" />

                <EditText
                    android:id="@+id/et_login_name"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="53.0dip"
                    android:background="@null"
                    android:digits="@string/onlynum_english"
                    android:hint="手机号/卡号"
                    android:maxLength="11"
                    android:singleLine="true"
                    android:textColor="@color/BLACK"
                    android:textColorHint="#66221815"
                    android:textSize="@dimen/text_design_30px" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="47.0dip"
                android:layout_marginLeft="10.0dip">

                <TextView
                    android:id="@+id/tv_pw"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="密码"
                    android:textColor="#ff221815"
                    android:textSize="@dimen/text_design_30px" />

                <EditText
                    android:id="@+id/et_login_pwd"
                    android:layout_width="220.0dip"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="53.0dip"
                    android:layout_toRightOf="@+id/tv_pw"
                    android:background="@null"
                    android:digits="@string/onlynum_english"
                    android:hint="4-20位字母、数字或字符"
                    android:password="true"
                    android:textColorHint="#66221815"
                    android:textSize="@dimen/text_design_30px" />

                <LinearLayout
                    android:id="@+id/tv_change_pwstate"
                    android:layout_width="40.0dip"
                    android:layout_height="fill_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20.0dip">

                    <ImageView
                        android:id="@+id/image_hide_pw"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/password_hide_ic" />
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dip"
                    android:layout_alignParentBottom="true"
                    android:background="#ffebedf0" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dip"
                    android:layout_alignParentTop="true"
                    android:background="#ffebedf0" />
            </RelativeLayout>

            <TextView
                android:id="@+id/img_nomal_login"
                style="@style/BtnNomalStyle"
                android:text="立即登录" />

            <TextView
                android:id="@+id/tv_dynamic_login"
                android:layout_width="wrap_content"
                android:layout_height="20.0dip"
                android:text="通过短信验证码登录"
                android:textColor="#ff798394"
                android:textSize="@dimen/text_design_24px" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="20.0dip"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="32.0dip"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_forget_pw"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginRight="11.0dip"
                android:text="忘记密码?"
                android:textColor="#ff798394"
                android:textSize="@dimen/text_design_24px" />

            <View
                android:layout_width="1.0dip"
                android:layout_height="15.0dip"
                android:layout_gravity="center_vertical"
                android:background="#ffebedf0" />

            <TextView
                android:id="@+id/tv_now_register"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginLeft="11.0dip"
                android:text="立即注册"
                android:textColor="#ff798394"
                android:textSize="@dimen/text_design_24px" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>