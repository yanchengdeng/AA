<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="@dimen/activity_horizontal_margin">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="4.2"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/text_larger_big"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_score_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/score_rate"
            android:textColor="@color/activity_info"
            android:textSize="@dimen/text_normal_down" />

    </LinearLayout>


    <View
        android:layout_width="1dp"
        android:layout_height="@dimen/side_letter_bar_width"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:background="@color/list_divider_color" />


    <LinearLayout
        android:id="@+id/ll_score"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <apartment.wisdom.com.widgets.views.ScoreView
            android:id="@+id/tv_score_ws"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <apartment.wisdom.com.widgets.views.ScoreView
            android:id="@+id/tv_score_hj"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <apartment.wisdom.com.widgets.views.ScoreView
            android:id="@+id/tv_score_fw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <apartment.wisdom.com.widgets.views.ScoreView
            android:id="@+id/tv_score_xjb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


    </LinearLayout>


</LinearLayout>

