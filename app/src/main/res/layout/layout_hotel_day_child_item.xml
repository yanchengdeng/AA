<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_normal_room_discount_price"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/list_divider_color"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/image_padding_big"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingStart="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/image_padding_big"
    >

    <TextView
        android:id="@+id/tv_price_change"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:drawableLeft="@mipmap/warn"
        android:text=""
        android:drawablePadding="@dimen/image_padding"
        android:gravity="center_vertical"
        android:textColor="@color/colorAccent" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tv_normal_discount_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="ï¿¥"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/text_normal_down" />


            <TextView
                android:id="@+id/tv_normal_room_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/image_padding"
                android:text="@string/hotel_child_price_tips"
                android:textColor="@color/activity_info"
                android:textSize="@dimen/text_small" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_normal_room_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:background="@drawable/normal_submit_btn_small"
            android:paddingBottom="4dp"
            android:paddingEnd="@dimen/image_padding_big"
            android:paddingStart="@dimen/image_padding_big"
            android:paddingTop="4dp"
            android:text="@string/pre_order"
            android:textColor="@color/white"
            android:textSize="@dimen/text_small" />

    </LinearLayout>
</RelativeLayout>