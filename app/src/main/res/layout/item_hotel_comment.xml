<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingLeft="10.0dip"
    android:paddingRight="10.0dip">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="60.0dip"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_user_head"
            android:layout_width="42.0dip"
            android:layout_height="42.0dip"
            android:src="@mipmap/ic_launcher_round"
            android:layout_marginBottom="10.0dip"
            android:layout_marginTop="10.0dip" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1.0"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingLeft="12.5dip">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="2.5dip"
                    android:paddingRight="10.0dip"
                    android:singleLine="true"
                    android:text="周星驰"
                    android:textColor="@color/app_text_black"
                    android:textSize="14.0sp" />

                <RatingBar
                    android:id="@+id/rb_score"
                    style="@style/mySmallRatingBarStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:isIndicator="true"
                    android:rating="3.0" />

                <TextView
                    android:id="@+id/tv_comment_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:alpha="0.7"
                    android:gravity="right"
                    android:paddingLeft="4.0dip"
                    android:singleLine="true"
                    android:text="4.5"
                    android:textColor="#ffb8b8b8"
                    android:textSize="@dimen/text_design_20px" />

                <TextView
                    android:id="@+id/tv_comment_creat_time"
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:gravity="right"
                    android:singleLine="true"
                    android:text="2016-02-01"
                    android:textColor="#ffb8b8b8"
                    android:textSize="@dimen/text_design_20px" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_hotel_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha="0.7"
                android:paddingLeft="2.5dip"
                android:paddingTop="5.0dip"
                android:singleLine="true"
                android:text="商务大床房"
                android:textColor="#ffa9afba"
                android:textSize="@dimen/text_design_24px" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_comment_content"
        android:layout_width="fill_parent"
        android:textColor="@color/activity_info"
        android:textSize="@dimen/text_normal_down"
        android:text="fsdfsdfsdfsdfsdfsdfsdfsdfsdfsdddddddddddddddddddddddddddddddddddd"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/iv_change_lines"
        android:layout_width="50.0dip"
        android:layout_height="20.0dip"
        android:layout_gravity="center_horizontal"
        android:scaleType="center"
        android:src="@mipmap/arrow_down"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/ll_reply"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_show_reply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="酒店回复"
            android:textColor="@color/app_text_black_alphe_80"
            android:textSize="12.0sp" />

        <TextView
            android:id="@+id/tv_reply_content"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/comment_repay_bg"
            android:paddingBottom="8.0dip"
            android:paddingLeft="8.0dip"
            android:paddingRight="3.0dip"
            android:text="酒店回复内容是什么 ，我也不知道"
            android:paddingTop="14.0dip"
            android:textColor="@color/app_text_light_black"
            android:textSize="10.0sp" />
    </LinearLayout>

    <View
        android:layout_width="0.0dip"
        android:layout_height="10.0dip" />
</LinearLayout>