<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/cp_common_title_bar" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_horizontal_margin"
        android:paddingEnd="@dimen/activity_horizontal_margin"
        android:paddingStart="@dimen/activity_horizontal_margin">

        <TextView
            android:id="@+id/tv_city_condition"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/image_padding"
            android:background="@drawable/normal_trans_bg"
            android:drawableLeft="@mipmap/list_city_ic"
            android:drawablePadding="@dimen/image_padding"
            android:padding="@dimen/image_padding"
            android:paddingLeft="@dimen/image_padding_big"
            android:text="福州(6)"
            android:textColor="@color/white"
            android:textSize="@dimen/text_normal" />


        <TextView
            android:id="@+id/tv_time_condition"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:background="@drawable/normal_trans_bg"
            android:drawableLeft="@mipmap/list_time_ic"
            android:drawablePadding="@dimen/image_padding_big"
            android:padding="@dimen/image_padding"
            android:paddingLeft="@dimen/image_padding"
            android:text="8月13-14  共1晚"
            android:textColor="@color/white"
            android:textSize="@dimen/text_normal" />

    </LinearLayout>

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </android.support.v4.widget.SwipeRefreshLayout>

</LinearLayout>
